<% layout("/layouts/boilerplate.ejs") %>
<body>
    <h1>All books</h1>
    
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">  <!--Here row is a predefined class  rows-cols-lg-3 means at large screen size minimum of 3 cards will be displayed-->
        <% for (let book of allBooks) { %>
            <a href="/LMS/Books/<%= book._id %>" class="book-link">
                <div class="card col book-card mt-3">
                    <img src="<%= book.image.url %>" class="card-img-top" alt="book-image" style="height:20rem">
                    <div class="card-img-overlay"></div>   <!--this is a bootstrap document that helps us to give a text on the image-->
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= book.title %></b><br>
                            Author: <%= book.author %><br>
                        </p>    
                    </div>
                </div>
            </a>
        <% } %>
    </div>
</body>
